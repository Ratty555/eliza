{
    "extends": "../../packages/core/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "types": ["bun-types"],
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "paths": {
            "@elizaos/*": ["../*/src"]
        }
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true
    },
    "include": ["src/**/*"]
}
